{
  "name": "tmux-pane-editors",
  "displayName": "tmux-like editor panes",
  "description": "Allows you to navigate editors like in tmux",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.97.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "publisher": "trombiano1",
  "contributes": {
    "commands": [
      {
        "command": "tmux-pane-editors.getPaneInfo",
        "title": "Tmux Pane Editors: Get Pane Info"
      },
      {
        "command": "tmux-pane-editors.splitEditorRight",
        "title": "Tmux Pane Editors: Split Editor Right"
      },
      {
        "command": "tmux-pane-editors.splitEditorDown",
        "title": "Tmux Pane Editors: Split Editor Down"
      },
      {
        "command": "tmux-pane-editors.closeActiveEditor",
        "title": "Tmux Pane Editors: Close Active Editor"
      },
      {
        "command": "tmux-pane-editors.resize",
        "title": "Tmux Pane Editors: Resize"
      },
      {
        "command": "tmux-pane-editors.navigate",
        "title": "Tmux Pane Editors: Navigate"
      }
    ],
    "keybindings": [
      {
        "key": "ctrl+b right",
        "command": "tmux-pane-editors.navigate",
        "args": "right"
      }, 
      {
        "key": "ctrl+b left",
        "command": "tmux-pane-editors.navigate",
        "args": "left"
      },
      {
        "key": "ctrl+b down",
        "command": "tmux-pane-editors.navigate",
        "args": "down"
      },
      {
        "key": "ctrl+b up",
        "command": "tmux-pane-editors.navigate",
        "args": "up"
      },
      {
        "key": "ctrl+b shift+5",
        "command": "tmux-pane-editors.splitEditorRight"
      },
      {
        "key": "ctrl+b shift+'",
        "command": "tmux-pane-editors.splitEditorDown"
      },
      {
        "key": "ctrl+b x",
        "command": "tmux-pane-editors.closeActiveEditor"
      },
      {
        "key": "ctrl+b alt+right",
        "command": "tmux-pane-editors.resize",
        "args": "right"
      },
      {
        "key": "alt+right",
        "command": "tmux-pane-editors.resize",
        "args": "right",
        "when": "tmuxMode"
      },
      {
        "key": "ctrl+b alt+left",
        "command": "tmux-pane-editors.resize",
        "args": "left"
      },
      {
        "key": "alt+left",
        "command": "tmux-pane-editors.resize",
        "args": "left",
        "when": "tmuxMode"
      },
      {
        "key": "ctrl+b alt+down",
        "command": "tmux-pane-editors.resize",
        "args": "down"
      },
      {
        "key": "alt+down",
        "command": "tmux-pane-editors.resize",
        "args": "down",
        "when": "tmuxMode"
      },
      {
        "key": "ctrl+b alt+up",
        "command": "tmux-pane-editors.resize",
        "args": "up"
      },
      {
        "key": "alt+up",
        "command": "tmux-pane-editors.resize",
        "args": "up", 
        "when": "tmuxMode"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.97.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.22.0",
    "@typescript-eslint/parser": "^8.22.0",
    "eslint": "^9.19.0",
    "esbuild": "^0.24.2",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.7.3",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/massanf/tmux-pane-editors"
  }
}
